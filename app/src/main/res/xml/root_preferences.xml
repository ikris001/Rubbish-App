<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Map Using">

        <EditTextPreference
            app:key="Signature"
            android:title="Signature"
            android:summary="your signature"
            app:useSimpleSummaryProvider="true"/>
        <CheckBoxPreference
            android:key="checkbox"
            app:defaultValue="false"
            android:summary="Tap to check if on or off"
            android:title="Checkbox Preference"/>


    </PreferenceCategory>

    <PreferenceCategory app:title="Basics">

        <SwitchPreferenceCompat
            app:key="switch"
            app:defaultValue="true"
            app:summary="click to switch on or off"
            app:title="Switch Preference" />
        <ListPreference
            app:defaultValue="@string/dark_mode_def_value"
            app:entries="@array/dark_mode_entries"
            app:entryValues="@array/dark_mode_values"
            app:key="@string/dark_mode"
            app:title="@string/dark_mode"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            android:dialogTitle="Select duration"
            android:entries="@array/settings_list_preference_titles"
            android:entryValues="@array/settings_list_preference_values"
            android:key="list"
            android:summary="Click to show a list to choose from"
            android:title="List Preference" />

        <Preference
            android:summary="Click here to see our Privacy Policy"
            android:title="Privacy Policy">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://sites.google.com/view/rubbishapp-privacy-policy/home"
/>
        </Preference>




    </PreferenceCategory>

</PreferenceScreen>