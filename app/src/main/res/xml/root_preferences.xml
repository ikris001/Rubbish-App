<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Map Using">

        <EditTextPreference
            app:key="Signature"
            android:title="@string/signature_title"
            android:summary="your signature"
            app:useSimpleSummaryProvider="true"/>
        <CheckBoxPreference
            android:key="checkbox"
            app:defaultValue="false"
            android:summary="Tap to check if on or off"
            android:title="Checkbox Preference"/>


    </PreferenceCategory>

    <PreferenceCategory app:title="Basics">

        <SwitchPreferenceCompat
            app:key="switch"
            app:defaultValue="true"
            app:summary="click to switch on or off"
            app:title="Switch Preference" />
        <ListPreference
           android:title="Dark Mode"
            app:key="dark_mode"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="1"
            android:entries="@array/dark_mode_entries"
            android:entryValues="@array/dark_mode_values"
            />
        <ListPreference
            android:dialogTitle="Select duration"
            android:entries="@array/settings_list_preference_titles"
            android:entryValues="@array/settings_list_preference_values"
            android:key="list"
            android:summary="Click to show a list to choose from"
            android:title="List Preference" />


    </PreferenceCategory>

</PreferenceScreen>