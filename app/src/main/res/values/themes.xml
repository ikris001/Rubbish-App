<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RubbishApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/signature_green</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/signature_red</item>
        <item name="colorSecondaryVariant">@color/signature_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name ='Theme.RubbishApp.MainActivityBar' parent='Theme.AppCompat.Light.DarkActionBar'>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name ='Theme.RubbishApp.LoginMenuBar' parent='Theme.AppCompat.Light.DarkActionBar'>
        <item name="colorPrimary">@color/signature_green</item>
    </style>

    <style name ='Theme.RubbishApp.RegisterMenuBar' parent='Theme.AppCompat.Light.DarkActionBar'>
        <item name="colorPrimary">#FFFDD0</item>
    </style>

    <style name ='Theme.RubbishApp.ProfileMenuBar' parent='Theme.AppCompat.Light.DarkActionBar'>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name ='Theme.RubbishApp.EditProfileMenuBar' parent='Theme.AppCompat.Light.DarkActionBar'>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name ='Theme.RubbishApp.MapMenuBar' parent='Theme.AppCompat.Light.DarkActionBar'>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name ='Theme.RubbishApp.MenuBar' parent='Theme.AppCompat.Light.NoActionBar'>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name ='Theme.RubbishApp.LoginActivity' parent='Theme.RubbishApp'>
        <item name="colorPrimary">@color/signature_orange_darker</item>
        <item name="colorPrimaryVariant">@color/signature_orange_darker</item>
    </style>

    <style name ='Theme.RubbishApp.RegisterActivity' parent='Theme.RubbishApp'>
        <item name="colorPrimary">@color/signature_yellow_darker</item>
        <item name="colorPrimaryVariant">@color/signature_yellow_darker</item>
    </style>

    <style name ='Theme.RubbishApp.MapsActivity' parent='Theme.RubbishApp'>
        <item name="colorPrimary">@color/signature_orange_darker</item>
        <item name="colorPrimaryVariant">@color/signature_orange_darker</item>
    </style>

    <style name ='Theme.RubbishApp.ProfileActivity' parent='Theme.RubbishApp'>
        <item name="colorPrimary">@color/signature_yellow_darker</item>
        <item name="colorPrimaryVariant">@color/signature_yellow_darker</item>
    </style>

    <style name ='Theme.RubbishApp.EditProfileActivity' parent='Theme.RubbishApp'>
        <item name="colorPrimary">@color/signature_green_darker</item>
        <item name="colorPrimaryVariant">@color/signature_green_darker</item>
    </style>

</resources>